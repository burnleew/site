<%= form_for [:admin, @proposal] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @proposal,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :status -%>
    <%= f.text_field :status, :class => 'larger widest' -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.proposals.proposal'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @proposal.status)
              } %>
<% end -%>
