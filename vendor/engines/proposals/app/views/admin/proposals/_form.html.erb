<%= render :partial => '/shared/admin/error_messages', :locals => {
  :object => @proposal,
  :include_object_name => true
} %>

<table border="0" cellpadding="10px" cellpadding="0">

  <% [:title, :abstract, :av_requirement, :video_approval, 
      :talk_type, :track, :talk_length].each do |field| %>

    <tr>
      <td>
        <%= t(field, :scope  => 'admin.proposals.proposal') -%>
      </td>
      <td>
        <%= @proposal.talk.send(field) -%>
      </td>
    </tr>

  <% end %>

  <% @proposal.talk.speakers.each do |speaker| %>

    <tr>
      <td>
        <%= t('by', :scope  => 'admin.proposals.proposal') -%>
      </td>
      <td>
        <%= "#{speaker.first_name} #{speaker.last_name}" -%>
      </td>
    </tr>
    <tr>
      <td>
        <%= t('bio', :scope  => 'admin.proposals.proposal') -%>
      </td>
      <td>
        <%= speaker.bio -%>
      </td>
    </tr>
  <% end %>

  <tr>
    <td>
      <%= t('status', :scope  => 'admin.proposals.proposal') -%>
    </td>

    <td>
      <%= @proposal.status -%>
    </td> 
  </tr>
</table>

<% display_for :organizer do %>
  <h3>Other ratings:</h3>
  <% for rater in @proposal.raters('appeal') %>
    <%= render :partial => 'reviews', :locals => { :rater => rater, :proposal => @proposal } unless rater == current_user %>
  <% end %>
<% end %>

<h3>Your rating:</h3>
<%= render :partial => 'rating', :locals => { :proposal => @proposal } %>

  
