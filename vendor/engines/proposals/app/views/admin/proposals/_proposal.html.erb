<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(proposal) -%>">
  <span class='title'>
    <%= title_for proposal %> ( <%= speaker_for proposal %> )
    <span class="preview"> - <%= track_for proposal %> - </span>
  </span>
  <span class="title"><%= proposal.status %></span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_proposal_path(proposal),
        :title => t('.edit') %>
  </span>
</li>
