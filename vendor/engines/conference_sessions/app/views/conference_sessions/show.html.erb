<div class="grid_6 p3 speaker">
  <h3><%= talk.title %></h3>
  <p><%= talk.abstract %></p>
  <p></p>
  <h4><%= speaker_for(talk) %></h4>
  <h5><%= link_to speaker.company, speaker.company_url %></h5>
  <%= link_to content_tag(:strong, "@#{speaker.twitter_id}"), "http://twitter.com/#{speaker.twitter_id}" %>
  <p>
    <strong>Bio:</strong>
    <%= speaker.bio %>
  </p>
</div>


